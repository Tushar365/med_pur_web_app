# MedSync Environment Variables Example
# Copy this file to .env and fill in the values for your environment

# Database Configuration
# =====================
# Connection string for PostgreSQL database
DATABASE_URL=postgresql://username:password@localhost:5432/medsync

# Individual PostgreSQL connection parameters (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=medsync

# Server Configuration
# ===================
# Port for the Express server to listen on
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Security Configuration
# =====================
# Secret key for session encryption (generate a secure random string)
SESSION_SECRET=your_secure_random_string_here

# Cookie settings
COOKIE_SECRET=another_secure_random_string_here

# CORS settings (optional)
CORS_ORIGIN=http://localhost:3000

# Feature Flags
# =============
# Enable/disable features (true/false)
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
DEMO_MODE=false

# Notification Services (if enabled)
# =======================
# SMTP settings for email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# Twilio settings for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number